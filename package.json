{
  "name": "spotify-API-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch --loader tsconfig-paths/register.js --experimental-strip-types --no-warnings --env-file .env src/server.ts",
    "start": "node --no-warnings dist/server.js",
    "build": "tsup src/server.ts --out-dir dist --format esm --target es2022",
    "build:prod": "npm ci --only=production && npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.9.3",
    "ultracite": "^5.6.1"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.0.0",
    "ioredis": "^5.8.1",
    "zod": "^4.1.12"
  }
}
